#!/bin/bash

function register_adapters {
    for adapter in $(ls adapters/*.sh); do
        adapter_name=$(basename $adapter .sh)
        source $adapter
        if [ "$adapter_registered" -eq 1 ]; then
            echo $adapter_name registered
            # HOW TO REGISTER?
        else
            echo $adapter_name not found
        fi
        uset adapter_registered
    done
}

function usage {
    # TODO
    echo "Usage"
}

function search {
    # TODO
    echo "Search" $@
}

case "$1" in
    search )
        shift
        search $@
        ;;
    register-adapters )
        shift
        register_adapters
    ;;
    * )
        usage
        ;;
esac
