#!/usr/bin/env python
import os
import sys

from adapters import AVAILABLE_ADAPTERS

def usage():
    pass


# TODO better command handling
if len(sys.argv) == 1:
    usage()
    exit(0)

if sys.argv[1] == 'search':
    if len(sys.argv) == 2:
        print "Use search query"
        exit(1)

    for adapter in AVAILABLE_ADAPTERS:
        adapter.search(sys.argv[2])
