#!/bin/bash

function register_providers {
    for provider in $(ls providers/*.sh); do
        provider_name = $(basename provider.sh)
        echo $provider
        source $provider
        # if $provider_some_function_to_detect_presence
        # $provider_name_register ?
    done
}

function usage {
    # TODO
    echo "Usage"
}

function search {
    # TODO
    echo "Search" $@
}

case "$1" in
    search )
        shift
        search $@
        ;;
    * )
        usage
        ;;
esac
